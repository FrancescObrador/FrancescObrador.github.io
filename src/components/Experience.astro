---
import ExperienceItem from "./ExperienceItem.astro";
import { TAGS } from "../data/tags";

interface Experience {
  title: string;
  company: string;
  description: string[];
  date: string;
  employmentType?: string;
  location?: string;
  technologies?: (keyof typeof TAGS)[];
}

const EXPERIENCE: Experience[] = [
  {
    title: "Gameplay Programmer",
    company: "The Breach Studios",
    description: [
      "Developed core gameplay systems for The Harvest (Unreal Engine/C++)",
      "Optimized game performance, achieving 30% FPS improvement",
      "Implemented multiplayer features for Project ST",
      "Collaborated in Agile teams to deliver features on schedule"
    ],
    date: "2021 - 2024",
    employmentType: "Full-time",
    location: "Remote",
    technologies: ['cpp', 'unreal', 'csharp', 'unity_dark', 'git']
  }
];
---

<ol class="relative mt-16 space-y-12">
  {EXPERIENCE.map((experience) => (
    <li class="group">
      <ExperienceItem 
        title={experience.title}
        company={experience.company}
        description={experience.description}
        date={experience.date}
        employmentType={experience.employmentType}
        location={experience.location}
        technologies={experience.technologies}
      />
    </li>
  ))}
</ol>