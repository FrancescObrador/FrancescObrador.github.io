---
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
  icon: string;
  class?: string;
}

const { href, icon, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-flex items-center gap-2 px-4 py-2 text-sm font-medium transition-colors rounded-full ${className || ""}`}
>
  <Icon name={icon} class="w-5 h-5" />
  <slot />
</a>
