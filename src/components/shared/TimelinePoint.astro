---
import { Icon } from "astro-icon/components";

interface Props {
  date: string;
  title: string;
  company: string;
}

const { date, title, company } = Astro.props;
---

<div
  class="group relative pb-12 md:grid md:grid-cols-5 md:gap-10 before:absolute before:left-[-1px] md:before:left-[calc(40%-2px)] before:top-0 before:h-full before:border-l-2 before:border-slate-200 dark:before:border-slate-800 before:content-['']"
>
  {/* El punto de la l√≠nea de tiempo */}
  <div
    class="absolute left-[-6px] md:left-[calc(40%-7px)] top-2 w-3 h-3 rounded-full bg-slate-300 dark:bg-slate-700 border-2 border-white dark:border-slate-950 group-hover:bg-blue-500 group-hover:border-blue-200 dark:group-hover:border-blue-900 transition-all duration-300 z-10"
  >
  </div>

  <div class="relative md:col-span-2 text-left md:text-right">
    <div class="sticky top-24">
      <time
        class="text-sm font-mono font-bold tracking-wider text-slate-400 dark:text-slate-500 uppercase"
      >
        {date}
      </time>
      <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mt-1">
        {title}
      </h3>
      <h4 class="font-medium text-blue-600 dark:text-blue-400">{company}</h4>
    </div>
  </div>

  <div class="relative flex flex-col gap-4 md:col-span-3 pt-2 md:pt-0">
    <slot />
  </div>
</div>
